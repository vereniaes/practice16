generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file: ./belajar.dbs"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  products Product[]
  orders   Order[]
}

model Product {
  id     Int     @id @default(autoincrement())
  name   String
  decs   String
  price  Int
  stock  Int
  userId Int
  user   User    @relation(fields: [userId], references: [id])
  images image[]
  orders Order[]
}

model image {
  id        Int     @id @default(autoincrement())
  img       String
  decs      String
  productId Int
  product   Product @relation(fields: [productId], references: [id])
}

model Order {
  id          Int      @id @default(autoincrement())
  orderAt     DateTime
  totalAmount Int
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  productId   Int
  products    Product  @relation(fields: [productId], references: [id])
}
